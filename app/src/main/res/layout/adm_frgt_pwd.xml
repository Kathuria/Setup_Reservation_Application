<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/admin_back"
    tools:context="com.example.aricent_ssr.MainActivity$PlaceholderFragment" >
    
<TextView
    android:id="@+id/textViewafr1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginTop="18dp"
    android:text="Password Recovery"
    android:textSize="30sp"
    tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextafr1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonafr1"
        android:layout_below="@+id/textViewafr1"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:hint="abc@aricent.com"
        android:inputType="textEmailAddress"
        android:text="\@aricent.com"
        tools:ignore="HardcodedText,LabelFor" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonafr1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewafr1"
        android:layout_below="@+id/editTextafr1"
        android:layout_marginTop="48dp"
        android:text="Submit"
        android:textColor="#110000"
        tools:ignore="HardcodedText" />

</RelativeLayout>
