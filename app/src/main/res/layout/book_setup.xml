<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/admin_back"
    android:scrollbars="vertical" >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:orientation="vertical" >

      <TextView
          android:id="@+id/textViewb1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Setup Booking"
          android:textSize="24sp"
          android:textStyle="bold"
          android:typeface="serif"
          tools:ignore="HardcodedText" />

      <TextView
          android:id="@+id/textViewb2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Setup"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

      <Spinner
          android:id="@+id/BookingSpinnerA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"/>

      <requestFocus />

      <TextView
          android:id="@+id/maNameA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Manager"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

      <EditText
          android:id="@+id/mNameA"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          tools:ignore="TextFields,LabelFor" />

      <TextView
          android:id="@+id/teNameA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Team"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

      <EditText
          android:id="@+id/tNameA"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:text="SOM"
          tools:ignore="TextFields,LabelFor,HardcodedText" />

      <TextView
          android:id="@+id/emNameA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Employee User ID"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

      <Spinner
          android:id="@+id/eNameSpinnerA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"/>
      
      <TextView		
          android:id="@+id/detailsA"		
          android:layout_width="wrap_content"		
          android:layout_height="wrap_content"		
          android:layout_marginTop="15dp"		
          android:text="Other Requirements"		
          android:textAppearance="?android:attr/textAppearanceMedium"		
          android:textStyle="bold"		
          tools:ignore="HardcodedText" />		
      <EditText		
          android:id="@+id/otherDetailsA"		
          android:layout_width="match_parent"		
          android:layout_height="wrap_content"		
          android:ems="10"		
          android:lines="2"		
          android:hint="Write Here..."		
          android:inputType="textMultiLine"		
          tools:ignore="HardcodedText" />
      
      <TextView
          android:id="@+id/textViewb32"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Booking Type"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
     <Spinner
          android:id="@+id/BookingTypeSpinnerA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:entries="@array/SelectType" />
      
      
      <TextView
          android:id="@+id/cdtvA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Date"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
   
       <RelativeLayout
          android:id="@+id/widget28A"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical" >
           <TextView
          android:id="@+id/textfromA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="From"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
          <EditText
        android:id="@+id/fromdateA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textfromA"
        android:focusableInTouchMode="false"
        android:editable="false" 
        android:inputType="none"
        android:hint="Tap Here" 
         tools:ignore="HardcodedText,Deprecated"/>
      <TextView
          android:id="@+id/texttoA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="To"
          android:layout_toLeftOf="@+id/todateA"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
       <EditText
        android:id="@+id/todateA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusableInTouchMode="false"
        android:editable="false" 
        android:inputType="none"
        android:hint="Tap Here" 
         tools:ignore="HardcodedText,Deprecated"/>
       
      
        </RelativeLayout>
        
        <TextView
          android:id="@+id/totalA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:background="#C0C0C0"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium"
          tools:ignore="HardcodedText" />
     <TextView
          android:id="@+id/ctstvA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Time Slot"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
      <Spinner
          android:id="@+id/TimeSlotSpinnerA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:entries="@array/SelectTimeSlot" />
       
      <TextView
          android:id="@+id/availabilityA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="#C0C0C0"
          android:layout_marginTop="5dp"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium"
          tools:ignore="HardcodedText" />
      

       <RelativeLayout
          android:id="@+id/buttonssA"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical" >

      <Button
          android:id="@+id/resetA"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="15dp"
          android:text="Reset"
          tools:ignore="HardcodedText" />

      <Button
          android:id="@+id/booksetupbuttonA"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:layout_marginRight="15dp"
          android:text="Submit"
          tools:ignore="HardcodedText" />

      </RelativeLayout>
 
  </LinearLayout>

    </ScrollView>
