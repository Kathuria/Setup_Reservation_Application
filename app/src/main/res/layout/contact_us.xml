<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/user_login"
    tools:context="com.example.aricent_ssr.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/cmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewn1"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Businees Email"
        android:inputType="textEmailAddress"
        tools:ignore="HardcodedText,LabelFor" >

<requestFocus />

    </EditText>
    
    <EditText
        android:id="@+id/cname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cmail"
        android:layout_below="@+id/cmail"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/cphone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cname"
        android:layout_alignRight="@+id/cname"
        android:layout_below="@+id/cname"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/ccmnt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cphone"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:hint="Comment"
            android:inputType="textMultiLine"
            android:lines="3"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            android:text="Contact Us"
 	  		android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/cbuttonn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reset_cont"
            android:layout_alignBottom="@+id/reset_cont"
            android:layout_alignRight="@+id/ccmnt"
            android:layout_marginRight="20dp"
            android:text="Submit"
            android:background="#EF871F"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/reset_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ccmnt"
            android:layout_below="@+id/ccmnt"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="14dp"
            android:text="Reset"
            android:background="#EF871F"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

</RelativeLayout>

