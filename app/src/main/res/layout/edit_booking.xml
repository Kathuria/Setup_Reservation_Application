<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/admin_back"
    android:scrollbars="vertical" >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:orientation="vertical" >

      <TextView
          android:id="@+id/textViewb1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Edit Booking"
          android:textSize="24sp"
          android:textStyle="bold"
          android:typeface="serif"
          tools:ignore="HardcodedText" />

      <TextView
          android:id="@+id/DetailsEUA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium"
          tools:ignore="HardcodedText" />
       <TextView		
          android:id="@+id/detailsEUA"		
          android:layout_width="wrap_content"		
          android:layout_height="wrap_content"		
          android:layout_marginTop="15dp"		
          android:text="Other Requirements"		
          android:textAppearance="?android:attr/textAppearanceMedium"		
          android:textStyle="bold"		
          tools:ignore="HardcodedText" />		
      <EditText		
          android:id="@+id/otherDetailsEUA"		
          android:layout_width="match_parent"		
          android:layout_height="wrap_content"		
          android:ems="10"		
          android:lines="2"		
          android:hint="Write Here..."		
          android:inputType="textMultiLine"		
          tools:ignore="HardcodedText" />
      
     <TextView
          android:id="@+id/textViewb32"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Booking Type"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
     <Spinner
          android:id="@+id/BookingTypeSpinnerEUA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:entries="@array/SelectType" />
      
      
      <TextView
          android:id="@+id/cdtvEUA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Date"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
     
 
      <RelativeLayout
          android:id="@+id/widget28UA"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical" >
           <TextView
          android:id="@+id/textfromEUA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="From"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
          <EditText
        android:id="@+id/fromdateEUA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textfromEUA"
        android:focusableInTouchMode="false"
        android:editable="false" 
        android:inputType="none"
        android:hint="Tap Here"
        tools:ignore="HardcodedText,Deprecated"  />
      <TextView
          android:id="@+id/texttoEUA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="To"
          android:layout_toLeftOf="@+id/todateEUA"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
       <EditText
        android:id="@+id/todateEUA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusableInTouchMode="false"
        android:editable="false" 
        android:inputType="none"
        android:hint="Tap Here"
        tools:ignore="HardcodedText,Deprecated"  />
       
      
        </RelativeLayout>
  
        <TextView
          android:id="@+id/totalEUA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:background="#C0C0C0"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium"
          tools:ignore="HardcodedText" />
     <TextView
          android:id="@+id/ctstvEUA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Time Slot"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
      <Spinner
          android:id="@+id/TimeSlotSpinnerEUA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:entries="@array/SelectTimeSlot" />
       
      <TextView
          android:id="@+id/availabilityEUA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="#C0C0C0"
          android:layout_marginTop="5dp"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium"
          tools:ignore="HardcodedText" />
      
      <Button
          android:id="@+id/editbookbuttonEUA"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Update"
          tools:ignore="HardcodedText" />

  </LinearLayout>

    </ScrollView>
