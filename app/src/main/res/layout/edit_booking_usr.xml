<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
     android:background="@drawable/user"  >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:orientation="vertical" >

      <TextView
          android:id="@+id/textViewb1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Edit Booking"
          android:textColor="#FF6603"
          android:textSize="24sp"
          android:textStyle="bold"
          android:typeface="serif"
          tools:ignore="HardcodedText" />

      <TextView
          android:id="@+id/DetailsEU"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium"
          tools:ignore="HardcodedText" />
       <TextView		
          android:id="@+id/detailsEU"		
          android:layout_width="wrap_content"		
          android:layout_height="wrap_content"		
          android:layout_marginTop="15dp"		
          android:text="Other Requirements"		
          android:textAppearance="?android:attr/textAppearanceMedium"		
          android:textStyle="bold"		
          tools:ignore="HardcodedText" />		
      <EditText		
          android:id="@+id/otherDetailsEU"		
          android:layout_width="match_parent"		
          android:layout_height="wrap_content"		
          android:ems="10"		
          android:lines="2"		
          android:hint="Write Here..."		
          android:inputType="textMultiLine"		
          tools:ignore="HardcodedText" />
      
     <TextView
          android:id="@+id/textViewb32"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Booking Type"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
     <Spinner
          android:id="@+id/BookingTypeSpinnerEU"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:entries="@array/SelectType" />
      
      
      <TextView
          android:id="@+id/cdtvEU"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Date"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
     
 
      <RelativeLayout
          android:id="@+id/widget28U"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical" >
           <TextView
          android:id="@+id/textfromEU"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="From"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

          <EditText
              android:id="@+id/fromdateEU"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/textfromEU"
              android:editable="false"
              android:focusableInTouchMode="false"
              android:hint="Tap Here"
              android:inputType="none"
              tools:ignore="HardcodedText,Deprecated" />

      <TextView
          android:id="@+id/texttoEU"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="To"
          android:layout_toLeftOf="@+id/todateEU"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
       <EditText
        android:id="@+id/todateEU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusableInTouchMode="false"
        android:editable="false" 
        android:inputType="none"
        android:hint="Tap Here" 
        tools:ignore="HardcodedText,Deprecated" />
       
      
        </RelativeLayout>
  
        <TextView
          android:id="@+id/totalEU"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:background="#C0C0C0"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium"
          tools:ignore="HardcodedText" />
     <TextView
          android:id="@+id/ctstvEU"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Time Slot"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
      <Spinner
          android:id="@+id/TimeSlotSpinnerEU"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:entries="@array/SelectTimeSlot" />
       
      <TextView
          android:id="@+id/availabilityEU"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="#C0C0C0"
          android:layout_marginTop="5dp"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium"
          tools:ignore="HardcodedText" />
      
      
      
      <Button
          android:id="@+id/editbookbuttonEU"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
               android:background="#EF871F"
          android:text="Update"
          android:textColor="#FFFFFF"
          tools:ignore="HardcodedText" />
  </LinearLayout>

    </ScrollView>
