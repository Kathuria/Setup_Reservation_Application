<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     android:background="@drawable/admin_back"
    android:scrollbars="vertical" >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:orientation="vertical" >

      <TextView
          android:id="@+id/textViewb1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Edit Rack Allocation"
          android:textSize="24sp"
          android:textStyle="bold"
          android:typeface="serif"
          tools:ignore="HardcodedText" />

      <TextView
          android:id="@+id/textViewb2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Choose Rack"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

      <Spinner
          android:id="@+id/SpinnerEr"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:entries="@array/racks" />

      <requestFocus />

       <TextView
          android:id="@+id/maNameEr"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Manager"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

      <EditText
          android:id="@+id/mNameEr"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          tools:ignore="TextFields,LabelFor" />

      <TextView
          android:id="@+id/teNameEr"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Team"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />
      <EditText
          android:id="@+id/tNameEr"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          tools:ignore="TextFields,LabelFor" />
      <TextView
          android:id="@+id/textViewb4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="From "
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

      
      <RelativeLayout
          android:id="@+id/widget28"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical" >


          <TextView
        
           android:id="@+id/lblDateAndTimeEr"
            android:background="#D1D1D1"
              android:layout_width="fill_parent"
              android:layout_height="30dp"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:textStyle="bold" />
          
          
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/widget29"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical" >

          <Button
              android:id="@+id/btnTimeEr"
              android:layout_width="139dp"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:text="Set the Time"
              tools:ignore="HardcodedText" />

          <Button
              android:id="@+id/btnDateEr"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:text="Set the Date"
              tools:ignore="HardcodedText" />

      </RelativeLayout>

      <TextView
          android:id="@+id/textViewb5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="To"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textStyle="bold"
          tools:ignore="HardcodedText" />

      <RelativeLayout
          android:id="@+id/widget30"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical" >

          <TextView
              android:id="@+id/lblDateAndTimeE1r"
              android:layout_width="fill_parent"
              android:layout_height="30dp"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:background="#D1D1D1"
              android:textStyle="bold" />
          
    </RelativeLayout>

      
 <RelativeLayout
          android:id="@+id/widget297"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical" >
      
      <Button
          android:id="@+id/btnDateE1r"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Set the Date"
          tools:ignore="HardcodedText" />

      <Button
          android:id="@+id/btnTimeE11r"
          android:layout_width="139dp"
          android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:text="Set the Time"
          tools:ignore="HardcodedText" />

</RelativeLayout>
      <Button
          android:id="@+id/editrackbutton"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Update"
          tools:ignore="HardcodedText" />
  </LinearLayout>

    </ScrollView>
