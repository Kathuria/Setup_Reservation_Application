<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Report Bug"
        android:textColor="#EF871F"
 	    android:textSize="24sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonrep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/userrep"
        android:layout_below="@+id/userrep"
        android:layout_marginTop="113dp"
        android:text="Report"
        android:background="#EF871F"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/reset_bug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonrep"
        android:layout_alignBottom="@+id/buttonrep"
        android:layout_alignLeft="@+id/userrep"
        android:text="Reset"
        android:background="#EF871F"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/userrep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Write Here........"
        android:inputType="textMultiLine"
        android:lines="3"
        tools:ignore="HardcodedText" >

        <requestFocus />
    </EditText>

</RelativeLayout>
