<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     android:background="@drawable/user"
    tools:context="com.example.aricent_ssr.MainActivity$PlaceholderFragment" >
    
<TextView
    android:id="@+id/textViewn1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="14dp"
    android:text="Request User"
    android:textColor="#EF871F"
    android:textSize="30sp"
    android:textStyle="bold"
    tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/EditTextn2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewn1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:text="\@aricent.com"
        android:hint="abc.xyz@aricent.com"
        android:inputType="textEmailAddress"
        tools:ignore="HardcodedText,LabelFor" />
     <requestFocus />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditTextn2"
        android:layout_alignRight="@+id/EditTextn2"
        android:layout_below="@+id/EditTextn2"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        tools:ignore="HardcodedText" >

       
    </EditText>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_phone_number"
        android:layout_below="@+id/et_phone_number"
        android:layout_marginTop="24dp"
        android:text="Booking Notifications"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/reset_requ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonn1"
        android:layout_alignBottom="@+id/buttonn1"
        android:layout_alignLeft="@+id/checkBox1"
        android:layout_marginLeft="30dp"
        android:text="Reset"
        android:background="#EF871F"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/et_phone_number"
        android:layout_below="@+id/checkBox1"
        android:layout_marginRight="28dp"
        android:layout_marginTop="39dp"
        android:text="Request"
        android:background="#EF871F"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

</RelativeLayout>

